# Environment Configuration for Blog Writer SDK
# Project: api-ai-blog-writer

# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# DataForSEO Configuration (Optional - for enhanced keyword analysis)
DATAFORSEO_API_KEY=your_dataforseo_api_key
DATAFORSEO_API_SECRET=your_dataforseo_api_secret

# MCP Configuration (Optional - for external integrations)
MCP_API_KEY=your_mcp_api_key

# AI Provider Configuration (Optional - for AI-enhanced content generation)
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORGANIZATION=your_openai_organization_id
OPENAI_DEFAULT_MODEL=gpt-4o-mini

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_DEFAULT_MODEL=claude-3-5-haiku-20241022

# DeepSeek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_BASE=https://api.deepseek.com
DEEPSEEK_DEFAULT_MODEL=deepseek-chat

# LiteLLM Configuration
# LiteLLM removed - using direct AI provider integrations

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# CORS Settings (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,https://your-app.vercel.app

# API Configuration
API_TITLE="Blog Writer SDK API"
API_VERSION="0.1.0"
API_DESCRIPTION="A powerful REST API for AI-driven blog writing with advanced SEO optimization"

# Content Generation Settings
DEFAULT_TONE=professional
DEFAULT_LENGTH=medium
ENABLE_SEO_OPTIMIZATION=true
ENABLE_QUALITY_ANALYSIS=true

# V1.0 Enterprise Features

# Batch Processing Configuration
BATCH_MAX_CONCURRENT=5
BATCH_MAX_RETRIES=2

# Rate Limiting Configuration (Optional - uses defaults if not set)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_DAY=10000

# Monitoring Configuration
METRICS_RETENTION_HOURS=24

# Rate Limiting (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Optional: External API Keys (if you want to integrate with external services)
# OPENAI_API_KEY=your-openai-key-here
# ANTHROPIC_API_KEY=your-anthropic-key-here
# GOOGLE_API_KEY=your-google-key-here

# Optional: Analytics and Monitoring
# SENTRY_DSN=your-sentry-dsn-here
# ANALYTICS_ENABLED=true

# Optional: Caching (Redis)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# Platform Integration Configuration

# Webflow Configuration
WEBFLOW_API_TOKEN=your_webflow_api_token
WEBFLOW_SITE_ID=your_webflow_site_id
WEBFLOW_COLLECTION_ID=your_webflow_collection_id

# Shopify Configuration
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token
SHOPIFY_BLOG_ID=your_shopify_blog_id

# WordPress Configuration
WORDPRESS_SITE_URL=https://yoursite.com
WORDPRESS_USERNAME=your_wordpress_username
WORDPRESS_APP_PASSWORD=your_wordpress_app_password

# Media Storage Configuration

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_FOLDER=blog-content

# Cloudflare R2 Configuration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
