# Cloud Run Environment Configuration for Blog Writer SDK
# This file shows the environment variables that should be stored in Google Secret Manager

# Application Settings
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Supabase Configuration (REQUIRED)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# AI Provider Configuration (At least one required for AI features)
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORGANIZATION=your_openai_organization_id
OPENAI_DEFAULT_MODEL=gpt-4o-mini

# Azure OpenAI Configuration (Alternative to OpenAI)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEFAULT_MODEL=gpt-4o-mini

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_DEFAULT_MODEL=claude-3-5-haiku-20241022

# DeepSeek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_BASE=https://api.deepseek.com
DEEPSEEK_DEFAULT_MODEL=deepseek-chat

# DataForSEO Configuration (Optional - for enhanced keyword analysis)
DATAFORSEO_API_KEY=your_dataforseo_api_key
DATAFORSEO_API_SECRET=your_dataforseo_api_secret

# MCP Configuration (Optional - for external integrations)
MCP_API_KEY=your_mcp_api_key

# LiteLLM Configuration
# LiteLLM removed - using direct AI provider integrations

# Redis Configuration (Optional - for caching, use Cloud Memorystore)
REDIS_HOST=your-memorystore-ip
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
# Alternative: Use Redis URL for external Redis
# REDIS_URL=redis://user:password@host:port/db

# CORS Settings (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-app.vercel.app

# API Configuration
API_TITLE=Blog Writer SDK API
API_VERSION=1.0.0
API_DESCRIPTION=A powerful REST API for AI-driven blog writing with advanced SEO optimization

# Content Generation Settings
DEFAULT_TONE=professional
DEFAULT_LENGTH=medium
ENABLE_SEO_OPTIMIZATION=true
ENABLE_QUALITY_ANALYSIS=true

# V1.0 Enterprise Features
# Batch Processing Configuration
BATCH_MAX_CONCURRENT=5
BATCH_MAX_RETRIES=2

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_DAY=10000

# Monitoring Configuration
METRICS_RETENTION_HOURS=24

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Google Cloud specific settings
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/secrets/service-account.json

# Environment Configuration
ENVIRONMENT=dev
DATABASE_ENVIRONMENT=dev
